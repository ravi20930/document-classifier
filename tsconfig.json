{
    "compilerOptions": {
      "target": "ES2021",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "skipLibCheck": true,
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "jsx": "preserve",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "incremental": true,
      "baseUrl": ".",
      "plugins": [
        {
          "name": "next"
        }
      ]
    },
    "include": [
      "packages/**/*",
      "packages/express/**/*.ts",
      "packages/next/next-env.d.ts",
      "packages/next/**/*.ts",
      "packages/next/**/*.tsx",
      "packages/next/.next/types/**/*.ts"
    ],
    "exclude": ["node_modules", "dist"]
  }
  